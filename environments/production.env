# YouTube Scraper Production Environment
# Configuration for production deployment
# NOTE: Replace placeholder values with actual production credentials

# Application Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Firebase Configuration
GOOGLE_SERVICE_KEY_PATH=/opt/credentials/firebase.json
GOOGLE_APPLICATION_CREDENTIALS=/opt/credentials/firebase.json
FIRESTORE_PROJECT_ID=youtube-scraper-prod

# Redis Configuration (Upstash Production)
UPSTASH_REDIS_REST_URL=https://your-prod-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-production-redis-token

# VPN Configuration (Surfshark Production)
SURFSHARK_PRIVATE_KEY=your-production-surfshark-key
SURFSHARK_ADDRESS=your-production-surfshark-address
VPN_PROVIDER=surfshark
VPN_TYPE=wireguard

# Scraper Configuration (Production Scale)
MAX_KEYWORDS=50
SCRAPER_TIMEOUT=300
RETRY_ATTEMPTS=3
DELAY_BETWEEN_REQUESTS=2

# Analytics Configuration
ANALYTICS_ENABLED=true
CATEGORY_MAPPING_PATH=src/config/category_mapping.json
METRICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=100

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=1800
MONITORING_ENABLED=true
ALERT_EMAIL=production-alerts@yourdomain.com

# Performance Settings (Production Scale)
MAX_CONCURRENT_CONNECTIONS=10
MEMORY_LIMIT_MB=4096
CPU_LIMIT_CORES=2

# Security Settings (Production Hardened)
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_HOUR=1000
ENABLE_IP_ROTATION=true

# Paths (Production)
DATA_DIRECTORY=/opt/youtube_app/data
LOG_DIRECTORY=/opt/youtube_app/logs
BACKUP_DIRECTORY=/opt/youtube_app/backups

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
GLUETUN_CONTAINER_NAME=gluetun

# Production-specific settings
ENABLE_METRICS_COLLECTION=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
BACKUP_RETENTION_DAYS=30
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=14

# Cron Schedule Settings
SCRAPER_CRON_SCHEDULE=0 * * * *  # Every hour
ANALYTICS_CRON_SCHEDULE=0 */2 * * *  # Every 2 hours
BACKUP_CRON_SCHEDULE=0 2 * * *  # Daily at 2 AM
HEALTH_CHECK_CRON_SCHEDULE=*/30 * * * *  # Every 30 minutes

# GitHub Integration (for automated deployment)
GITHUB_REPOSITORY=canaanhowell/youtube-scraper-production
GITHUB_BRANCH=main
ENABLE_AUTO_DEPLOYMENT=true
# YouTube Scraper Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Firebase Configuration
GOOGLE_SERVICE_KEY_PATH=/path/to/firebase-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-service-account.json
FIRESTORE_PROJECT_ID=your-project-id

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# VPN Configuration (Surfshark)
SURFSHARK_PRIVATE_KEY=your-surfshark-private-key
SURFSHARK_ADDRESS=your-surfshark-address
VPN_PROVIDER=surfshark
VPN_TYPE=wireguard

# Scraper Configuration
MAX_KEYWORDS=50
SCRAPER_TIMEOUT=300
RETRY_ATTEMPTS=3
DELAY_BETWEEN_REQUESTS=2

# Analytics Configuration
ANALYTICS_ENABLED=true
CATEGORY_MAPPING_PATH=src/config/category_mapping.json
METRICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=100

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=1800
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourdomain.com

# Performance Settings
MAX_CONCURRENT_CONNECTIONS=10
MEMORY_LIMIT_MB=4096
CPU_LIMIT_CORES=2

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_HOUR=1000
ENABLE_IP_ROTATION=true

# Paths
DATA_DIRECTORY=/opt/youtube_scraper/data
LOG_DIRECTORY=/opt/youtube_scraper/logs
BACKUP_DIRECTORY=/opt/youtube_scraper/backups

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
GLUETUN_CONTAINER_NAME=gluetun
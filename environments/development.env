# YouTube Scraper Development Environment
# Configuration for local development and testing

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# Firebase Configuration
GOOGLE_SERVICE_KEY_PATH=./credentials/firebase-dev.json
GOOGLE_APPLICATION_CREDENTIALS=./credentials/firebase-dev.json
FIRESTORE_PROJECT_ID=youtube-scraper-dev

# Redis Configuration (Development - use local Redis or Upstash free tier)
UPSTASH_REDIS_REST_URL=redis://localhost:6379
UPSTASH_REDIS_REST_TOKEN=development-token

# VPN Configuration (Development - optional)
SURFSHARK_PRIVATE_KEY=dev-private-key
SURFSHARK_ADDRESS=10.64.0.1/32
VPN_PROVIDER=surfshark
VPN_TYPE=wireguard

# Scraper Configuration (Reduced for development)
MAX_KEYWORDS=5
SCRAPER_TIMEOUT=60
RETRY_ATTEMPTS=2
DELAY_BETWEEN_REQUESTS=1

# Analytics Configuration
ANALYTICS_ENABLED=true
CATEGORY_MAPPING_PATH=src/config/category_mapping.json
METRICS_RETENTION_DAYS=30
ANALYTICS_BATCH_SIZE=10

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=300
MONITORING_ENABLED=true
ALERT_EMAIL=dev@localhost

# Performance Settings (Reduced for development)
MAX_CONCURRENT_CONNECTIONS=3
MEMORY_LIMIT_MB=1024
CPU_LIMIT_CORES=1

# Security Settings (Relaxed for development)
ENABLE_RATE_LIMITING=false
MAX_REQUESTS_PER_HOUR=100
ENABLE_IP_ROTATION=false

# Paths (Local development)
DATA_DIRECTORY=./data
LOG_DIRECTORY=./logs
BACKUP_DIRECTORY=./backups

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
GLUETUN_CONTAINER_NAME=gluetun-dev

# Development-specific settings
TEST_MODE=true
MOCK_EXTERNAL_SERVICES=false
ENABLE_DEBUG_LOGGING=true
PYTEST_TIMEOUT=30
[Unit]
Description=Run YouTube Scraper Security Scan Weekly
Documentation=https://github.com/canaanhowell/youtube-scraper-production
Requires=youtube-security-scan.service

[Timer]
# Run every Sunday at 2 AM
OnCalendar=Sun *-*-* 02:00:00
# Run immediately if the system was powered down during the scheduled time
Persistent=true
# Add random delay up to 30 minutes to avoid system load spikes
RandomizedDelaySec=1800

[Install]
WantedBy=timers.target
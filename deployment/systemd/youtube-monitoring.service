[Unit]
Description=YouTube Scraper Health Monitoring Service
Documentation=https://github.com/canaanhowell/youtube-scraper-production
After=network.target youtube-scraper.service
Wants=network.target

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/opt/youtube_app

# Environment
Environment=PYTHONPATH=/opt/youtube_app
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=/opt/youtube_app/.env

# Enhanced monitoring with alerting
ExecStart=/bin/bash -c 'source venv/bin/activate && python3 monitoring/alerting.py'
ExecStartPost=/opt/youtube_app/deployment/scripts/health_check.sh

# Process management
TimeoutStartSec=300
TimeoutStopSec=30
RemainAfterExit=no

# Resource limits
LimitNOFILE=1024
LimitNPROC=512

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/youtube_app/logs /opt/youtube_app/tmp
ReadWritePaths=/opt/youtube_app/monitoring/reports

# Logging
StandardOutput=append:/opt/youtube_app/logs/monitoring-service.log
StandardError=append:/opt/youtube_app/logs/monitoring-service-error.log
SyslogIdentifier=youtube-monitoring

[Install]
WantedBy=multi-user.target